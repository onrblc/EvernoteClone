@model EvernoteClone.Entity.UserClasses.User

@{
	ViewBag.Title = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Create", "User", FormMethod.Post))
{
	@Html.AntiForgeryToken()

	<div class="row">
		<div class="col-md-12 col-xs-12 col-xl-12">
			<div class="x_panel">
				<div class="x_title">
					<ul class="list-group">
						<li class="list-group-item active">Oluştur</li>
					</ul>
					<div class="x_content">
						<br />
						<div id="form1" data-parsley-validate class="form-horizontal form-label-left black">
							<div class="form-group">
								<label class="control-label col-md-3 col-sm-3 col-xl-12" style="text-align: left !important; padding-left: 50px">
									Adı:
								</label>
								<div class="col-md-6 col-xs-6 col-xl-12">
									@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-6 col-xs-12" } })
									<div class="col-md-6 col-sm-6 col-xl-12">
										@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
									</div>
								</div>
							</div>
							<div class="form-group">
								<label class="control-label col-md-3 col-sm-3 col-xl-12" style="text-align: left !important; padding-left: 50px">
									Soyadı:
								</label>
								<div class="col-md-6 col-xs-6 col-xl-12">
									@Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control col-md-6 col-xs-12" } })
									<div class="col-md-6 col-sm-6 col-xl-12">
										@Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
									</div>
								</div>
							</div>
							<div class="form-group">
								<div class="col-md-3 col-sm-3 col-xl-12" style="text-align: left !important; padding-left: 50px">
									<strong>@Html.DisplayNameFor(model => model.Email):</strong>
								</div>
								<div class="col-md-6 col-xs-6 col-xl-12">
									@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-md-6 col-xs-12" } })
									<div class="col-md-6 col-sm-6 col-xl-12">
										@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
									</div>
								</div>
							</div>
							<div class="form-group">
								<div class="col-md-3 col-sm-3 col-xl-12" style="text-align: left !important; padding-left: 50px">
									<strong>@Html.DisplayNameFor(model => model.Password):</strong>
								</div>
								<div class="col-md-6 col-xs-6 col-xl-12">
									@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control col-md-6 col-xs-12" } })
									<div class="col-md-6 col-sm-6 col-xl-12">
										@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
									</div>
								</div>
							</div>
							<div class="form-group">
								<div class="col-md-3 col-sm-3 col-xl-12" style="text-align: left !important; padding-left: 50px">
									<strong>@Html.DisplayNameFor(model => model.UserName):</strong>
								</div>
								<div class="col-md-6 col-xs-6 col-xl-12">
									@Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control col-md-6 col-xs-12" } })
									<div class="col-md-6 col-sm-6 col-xl-12">
										@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
									</div>
								</div>
							</div>
							@* DATETIME PICKER *@

							<div class="form-group">
								<div class="col-md-3 col-sm-3 col-xl-12" style="text-align: left !important; padding-left: 50px">
									<strong>@Html.DisplayNameFor(model => model.DayOfBirth):</strong>
								</div>
								<div class="col-md-6 col-xs-6 col-xl-12">
									@Html.EditorFor(model => model.DayOfBirth, new { htmlAttributes = new { @class = "form-control col-md-6 col-xs-12" } })
									<div class="col-md-6 col-sm-6 col-xl-12">
										@Html.ValidationMessageFor(model => model.DayOfBirth, "", new { @class = "text-danger" })
									</div>
								</div>
							</div>

							<div class="form-group">
								<div class="col-md-3 col-sm-3 col-xl-12" style="text-align: left !important; padding-left: 50px">
									<strong>@Html.DisplayNameFor(model => model.Department):</strong>
								</div>
								<div class="col-md-6 col-xs-6 col-xl-12">
									@Html.EnumDropDownListFor(model => model.Department, "Departman Seçiniz", htmlAttributes: new { @class = "form-control col-md-6 col-xs-12" })
									<div class="col-md-6 col-sm-6 col-xl-12">
										@Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })
									</div>
								</div>
							</div>
							<div class="form-group">
								<div class="col-md-3 col-sm-3 col-xl-12" style="text-align: left !important; padding-left: 50px">
									<strong>@Html.DisplayNameFor(model => model.Status):</strong>
								</div>
								<div class="col-md-6 col-xs-6 col-xl-12">
									@Html.EnumDropDownListFor(model => model.Status, "Durum Seçiniz", htmlAttributes: new { @class = "form-control col-md-6 col-xs-12" })
									<div class="col-md-6 col-sm-6 col-xl-12">
										@Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
									</div>
								</div>
							</div>
							<div class="form-group">
								<div class="col-md-3 col-sm-3 col-xl-12" style="text-align: left !important; padding-left: 50px">
									<strong>@Html.DisplayNameFor(model => model.ObjectStatus):</strong>
								</div>
								<div class="col-md-6 col-xs-6 col-xl-12">
									@Html.EnumDropDownListFor(model => model.ObjectStatus, "Durum Seçiniz", htmlAttributes: new { @class = "form-control col-md-6 col-xs-12" })
									<div class="col-md-6 col-sm-6 col-xl-12">
										@Html.ValidationMessageFor(model => model.ObjectStatus, "", new { @class = "text-danger" })
									</div>
								</div>
							</div>

							<button type="submit" data-toggle="tooltip" data-placement="top" title="Kaydet" class="btn btn-warning"><i class="fa fa-check"></i></button>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	@section scripts{
		<script type="text/javascript">

			$(document).ready(
				function () {
					document.getElementById("Department").selectedIndex = "";
					document.getElementById("Status").selectedIndex = "";
					document.getElementById("ObjectStatus").selectedIndex = "";

				});
		</script>


	}
}


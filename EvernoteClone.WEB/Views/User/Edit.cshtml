@model EvernoteClone.Entity.UserClasses.User

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "User", FormMethod.Post))
{

	@Html.AntiForgeryToken()

	<div class="row">
		<div class="col-md-12 col-sm-12 col-xs-12">
			<div class="x_panel">
				<div class="x_title">
					<ul class="list-group">
						<li class="list-group-item active">Düzenle</li>
					</ul>
					<div class="clearfix"></div>
				</div>
				<div class="x_content">
					<br />
					<div id="demo-form2" data-parsley-validate class="form-horizontal form-label-left black">
						<div class="form-group">
							<label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left !important; padding-left: 120px" for="first-name">
								Name <span class="required">*</span>
							</label>
							<div class="col-md-6 col-sm-6 col-xs-12">
								@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", id = "txtCode" } })
								<div class="col-md-6 col-sm-6 col-xs-12">
									@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
								</div>
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left !important; padding-left: 120px" for="last-name">
								Surname <span class="required">*</span>
							</label>
							<div class="col-md-6 col-sm-6 col-xs-12">
								@Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
								<div class="col-md-6 col-sm-6 col-xs-12">
									@Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
								</div>
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left !important; padding-left: 120px" for="first-name">
								UserName <span class="required">*</span>
							</label>
							<div class="col-md-6 col-sm-6 col-xs-12 ">
								@Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12 has-feedback-right" } })
								<div class="col-md-6 col-sm-6 col-xs-12">
									@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
								</div>
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left !important; padding-left: 120px" for="first-name">

								Password <span class="required">*</span>
							</label>
							<div class="col-md-6 col-sm-6 col-xs-12 ">
								@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
								<div class="col-md-6 col-sm-6 col-xs-12">
									@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
								</div>
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left !important; padding-left: 120px" for="first-name">
								DayOfBirth<span class="required">*</span>
							</label>
							<div class="col-md-6 col-sm-6 col-xs-12">
								@Html.EditorFor(model => model.DayOfBirth, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
								<div class="col-md-6 col-sm-6 col-xs-12">
									@Html.ValidationMessageFor(model => model.DayOfBirth, "", new { @class = "text-danger" })
								</div>
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left !important; padding-left: 120px" for="first-name">
								Email<span class="required">*</span>
							</label>
							<div class="col-md-6 col-sm-6 col-xs-12">
								@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12" } })
								<div class="col-md-6 col-sm-6 col-xs-12">
									@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
								</div>
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align: left !important; padding-left: 120px">
								Department <span class="required">*</span>
							</label>
							<div class="col-md-2 col-sm-6 col-xs-12">
								@Html.EnumDropDownListFor(model => model.Department, htmlAttributes: new { @class = "form-control col-md-7 col-xs-12" })
							</div>
						</div>
						@*<div class="ln_solid"></div>
							<ul class="nav navbar-left panel_toolbox">
								<li>*@
						<button id="btnAccept" type="submit" data-toggle="tooltip" data-placement="top" title="Kaydet" class="btn btn-warning"><i class="fa fa-check"></i></button>
						@*</li>
							</ul>*@
					</div>
				</div>
			</div>
		</div>
	</div>
}



